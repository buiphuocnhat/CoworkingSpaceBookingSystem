<% @results.each do |space| %>
  <div class="thumbnail col-md-3">
    <img src=<%=space.picture%> alt="Picture">
      <div class="caption">
        <h3><%=space.name%></h3>
        <p><%=space.capacity%></p>
        <p><%=space.venue.name%></p>
        <p><%=space.venue.address.name%></p>
        <p><%=space.venue.address.city%></p>
        <%= link_to controller: "space_books", action: "show", id: space.id do %>
            <p class="btn btn-primary " role="button">Read more...</p>
        <% end %>
      </div>
  </div>
<% end %>
